                type="citycase2"
                label="COM_MYCITYSELECTOR_CITY_CASE_2"
                description="COM_MYCITYSELECTOR_CITY_CASE_2"
                hint="COM_MYCITYSELECTOR_FORM_CITY_PLACEHOLDER_CASE2"
        />
