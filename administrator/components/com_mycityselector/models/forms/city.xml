                description="COM_MYCITYSELECTOR_CITY_CASE_5"
                hint="COM_MYCITYSELECTOR_FORM_CITY_PLACEHOLDER_CASE5"
        />
        <field
                name="city_case_6"
                type="citycase6"
                label="COM_MYCITYSELECTOR_CITY_CASE_6"
                description="COM_MYCITYSELECTOR_CITY_CASE_6"
                hint="COM_MYCITYSELECTOR_FORM_CITY_PLACEHOLDER_CASE6"
        />
